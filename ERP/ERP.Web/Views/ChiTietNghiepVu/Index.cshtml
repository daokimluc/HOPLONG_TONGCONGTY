@model IEnumerable<ERP.Web.Models.Database.CN_CHI_TIET_NGHIEP_VU>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div ng-controller="dsnghiepvuCtrl" ng-app="myApp">
    <table class="table">
        <thead>
            <tr>
                <th class="text-left">
                    Tên chi tiết
                </th>
                <th class="text-left">
                    Mô tả
                </th>
                <th class="text-left">
                    Tên nghiệp vụ
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in dsnghiepvu" class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                <td class="text-left">{{item.TEN_CHI_TIET}}</td>
                <td class="text-left">{{item.MO_TA}}</td>
                <td class="text-left">{{item.TEN_NGHIEP_VU}}</td>
                <td>
                    <button class="btn btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"><i class="glyphicon glyphicon-edit"></i></button>
                </td>
                <td>
                    <button class="btn btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"><i class="glyphicon glyphicon-remove"></i></button>
                    <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                </td>

            </tr>
        </tbody>
    </table>
</div>